@model IEnumerable<BTL_Web_NC.Models.CongTy>

@{
    ViewData["Title"] = "Danh sách nhà tuyển dụng";
}

<div class="container mt-4">
    <h2 class="mb-4 text-center">
        <i class="bi bi-buildings text-primary me-2"></i> Danh sách nhà tuyển dụng
    </h2>

    <!-- Search form -->
    <form asp-action="DanhSachNhaTuyenDung" method="get" class="mb-4 d-flex justify-content-center">
        <input type="text" name="search" class="form-control w-50 me-2" placeholder="Tìm công ty theo tên...">
        <button type="submit" class="btn btn-primary">
            <i class="bi bi-search"></i> Tìm kiếm
        </button>
    </form>

    <div class="row">
        @foreach (var congTy in Model)
        {
            <div class="col-md-6 mb-4">
                <div class="card h-100 shadow-sm border-0 rounded-4 p-3 d-flex flex-row align-items-center">
                    <div class="company-logo mx-auto mb-3" style="width:60px;height:60px;overflow:hidden;border-radius:8px;">
                        <img src="@(string.IsNullOrEmpty(congTy.Logo) ? "/img/logo-congty-default.jpg" : congTy.Logo)"
                             alt="@congTy.TenCongTy" class="img-fluid" style="width:100%;height:100%;object-fit:cover;">
                    </div>


                    <div class="flex-grow-1">
                        <h5 class="text-primary mb-1"><i class="bi bi-building me-1"></i> @congTy.TenCongTy</h5>
                        <p class="mb-1"><i class="bi bi-geo-alt me-1"></i> @congTy.DiaChi</p>
                        <p class="mb-1"><i class="bi bi-globe me-1"></i> @congTy.Website</p>
                        <p class="mb-2"><i class="bi bi-telephone me-1"></i> @congTy.SoDienThoai</p>

                        <a asp-controller="Employer" asp-action="ChiTietCongTy" asp-route-id="@congTy.MaCongTy" class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-eye-fill me-1"></i> Xem chi tiết
                        </a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
