<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BTL_Web_NC</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BTL_Web_NC.styles.css" asp-append-version="true" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

</head>
<body>

    <header>
        @await Html.PartialAsync("_Header")
    </header>
    
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            <div class="row">
                <!-- Cột 1: Logo & Mô tả -->
                <div class="col-md-4">
                    <h5 class="fw-bold">JobMarket</h5>
                    <p>Nền tảng kết nối nhà tuyển dụng và ứng viên nhanh chóng, hiệu quả.</p>
                </div>

                <!-- Cột 2: Liên kết nhanh -->
                <div class="col-md-4">
                    <h5 class="fw-bold">Liên kết nhanh</h5>
                    <ul class="list-unstyled">
                        <li><a href="#" class="text-light text-decoration-none">Trang chủ</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Việc làm</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Nhà tuyển dụng</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Ứng viên</a></li>
                        <li><a href="#" class="text-light text-decoration-none">Blog</a></li>
                    </ul>
                </div>

                <!-- Cột 3: Thông tin liên hệ -->
                <div class="col-md-4">
                    <h5 class="fw-bold">Liên hệ</h5>
                    <p><i class="bi bi-envelope"></i> contact@jobmarket.com</p>
                    <p><i class="bi bi-telephone"></i> 0123 456 789</p>
                    <p><i class="bi bi-geo-alt"></i> 123 Đường ABC, TP.HCM</p>
                </div>
            </div>

            <!-- Mạng xã hội -->
            <div class="text-center mt-3">
                <a href="#" class="text-light me-3"><i class="bi bi-facebook fs-4"></i></a>
                <a href="#" class="text-light me-3"><i class="bi bi-linkedin fs-4"></i></a>
                <a href="#" class="text-light"><i class="bi bi-twitter fs-4"></i></a>
            </div>

            <!-- Bản quyền -->
            <div class="text-center mt-3">
                <p class="mb-0">&copy; 2025 JobMarket. All rights reserved.</p>
            </div>
        </div>
    </footer>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
