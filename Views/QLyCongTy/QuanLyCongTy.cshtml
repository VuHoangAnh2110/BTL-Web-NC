@model IEnumerable<BTL_Web_NC.Models.CongTy>

@{
    ViewData["Title"] = "Quản lý công ty";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Form tìm kiếm -->
        <form asp-action="QuanLyCongTy" method="get" class="d-flex w-100 gap-2">
            <input type="text" name="ten" class="form-control w-25" placeholder="Tìm theo tên công ty..." value="@Context.Request.Query["ten"]">
            <input type="text" name="diaChi" class="form-control w-25" placeholder="Tìm theo địa chỉ..." value="@Context.Request.Query["diaChi"]">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i>
            </button>
        </form>



        <!-- Nút thêm công ty -->
        <a asp-controller="QLyCongTy" asp-action="ThemCongTy" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm công ty
        </a>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th> <!-- Thêm cột Số thứ tự -->
                <th>Tên công ty</th>
                <th>Địa chỉ</th>
                <th>Website</th>
                <th>Điện thoại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (congTy, index) in Model.Select((value, i) => (value, i + 1))) 
            {
                <tr id ="row_@congTy.MaCongTy">
                    <td>@index</td> <!-- Hiển thị số thứ tự -->
                    <td>@congTy.TenCongTy</td>
                    <td>@congTy.DiaChi</td>
                    <td>@congTy.Website</td>
                    <td>@congTy.SoDienThoai</td>
                    <td class="text-center">
                        <div class="d-flex justify-content-center">
                            <a asp-controller="Employer" asp-action="ChiTietCongTy" asp-route-id="@congTy.MaCongTy" class="btn btn-sm btn-info me-1">
                                <i class="bi bi-eye"></i>
                            </a>
                            <a asp-controller="Employer" asp-action="Edit" asp-route-id="@congTy.MaCongTy" class="btn btn-sm btn-warning me-1">
                                <i class="bi bi-pencil-square"></i>
                            </a>
                            <a href="javascript:void(0);" onclick="xoaCongTy('@congTy.MaCongTy')" class="btn btn-sm btn-danger">
                                <i class="bi bi-trash"></i>
                            </a>
                        </div>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>
@section Scripts {
    <script>
        function xoaCongTy(maCongTy) {
            if (confirm("Bạn có chắc chắn muốn xóa công ty này không?")) {
                $.ajax({
                    url: '@Url.Action("XoaCongTy", "QLyCongTy")',
                    type: 'POST',
                    data: { id: maCongTy },
                    success: function (res) {
                        if (res.success) {
                            alert(res.message);
                    $('#row_' + maCongTy).remove(); // Xóa dòng khỏi bảng sau khi xóa thành công
                        } else {
                            alert("Xoá thất bại: " + res.message);
                        }
                    },
                    error: function () {
                        alert("Đã có lỗi xảy ra khi xoá.");
                    }
                });
            }
        }
    </script>
}
