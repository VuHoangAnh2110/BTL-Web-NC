@model IEnumerable<BTL_Web_NC.Models.CongTy>

@{
    ViewData["Title"] = "Quản lý công ty";
}

<div class="container mt-4">

    <div class="d-flex justify-content-between align-items-center mb-4">
        <!-- Form tìm kiếm -->
        <form asp-action="QuanLyCongTy" method="get" class="d-flex w-50">
            <input type="text" name="search" class="form-control me-2" placeholder="Tìm công ty theo tên...">
            <button type="submit" class="btn btn-primary">
                <i class="bi bi-search"></i> Tìm kiếm
            </button>
        </form>

        <!-- Nút thêm công ty -->
        <a asp-controller="QLyCongTy" asp-action="ThemCongTy" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm công ty
        </a>
    </div>

    <table class="table table-bordered table-hover text-center">
        <thead class="table-dark">
            <tr>
                <th>STT</th> <!-- Thêm cột Số thứ tự -->
                <th>Tên công ty</th>
                <th>Địa chỉ</th>
                <th>Website</th>
                <th>Điện thoại</th>
                <th>Thao tác</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var (congTy, index) in Model.Select((value, i) => (value, i + 1))) 
            {
                <tr>
                    <td>@index</td> <!-- Hiển thị số thứ tự -->
                    <td>@congTy.TenCongTy</td>
                    <td>@congTy.DiaChi</td>
                    <td>@congTy.Website</td>
                    <td>@congTy.SoDienThoai</td>
                    <td>
                        <a asp-controller="Employer" asp-action="ChiTietCongTy" asp-route-id="@congTy.MaCongTy" class="btn btn-sm btn-info">Xem</a>
                        <a asp-controller="Employer" asp-action="Edit" asp-route-id="@congTy.MaCongTy" class="btn btn-sm btn-warning">Sửa</a>
                        <a asp-controller="Admin" asp-action="XoaCongTy" asp-route-id="@congTy.MaCongTy" class="btn btn-sm btn-danger">Xóa</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
