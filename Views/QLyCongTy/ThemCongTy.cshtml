@model BTL_Web_NC.ViewModels.ThemCongTyViewModel

@{
    ViewData["Title"] = "Thêm Công Ty";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Thêm Công Ty Mới</h2>

    <form asp-action="ThemCongTy" method="post" enctype="multipart/form-data" class="row g-3">
        <div class="col-md-6">
            <label asp-for="TenCongTy" class="form-label"></label>
            <input asp-for="TenCongTy" class="form-control" />
            <span asp-validation-for="TenCongTy" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Website" class="form-label"></label>
            <input asp-for="Website" class="form-control" />
            <span asp-validation-for="Website" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="SoDienThoai" class="form-label"></label>
            <input asp-for="SoDienThoai" class="form-control" />
            <span asp-validation-for="SoDienThoai" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="DiaChi" class="form-label"></label>
            <input asp-for="DiaChi" class="form-control" />
            <span asp-validation-for="DiaChi" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label for="LogoFile" class="block font-medium">Logo Công Ty</label>
            <input type="file" name="LogoFile" class="form-control-file" />
        </div>

        <div class="col-12">
            <label asp-for="MoTa" class="form-label"></label>
            <textarea asp-for="MoTa" class="form-control" rows="3"></textarea>
            <span asp-validation-for="MoTa" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="TenTaiKhoan" class="form-label"></label>
            <input asp-for="TenTaiKhoan" class="form-control" />
            <span asp-validation-for="TenTaiKhoan" class="text-danger"></span>
        </div>

        <div class="col-12 text-center">
            <button type="submit" class="btn btn-primary">Thêm Công Ty</button>
            <a asp-action="QuanLyCongTy" class="btn btn-secondary ms-2">Quay lại</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
