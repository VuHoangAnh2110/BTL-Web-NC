<style>
    /* Carousel Banner Styling */
    .carousel-item {
        height: 400px;
    }

    .carousel-item img {
        object-fit: cover;
        width: 100%;
        height: 100%;
    }

    .carousel-caption {
        background-color: rgba(0, 0, 0, 0.5);
        border-radius: 8px;
        padding: 15px;
        bottom: 20px;
        left: 10%;
        right: 10%;
    }

    .carousel-caption h3 {
        color: white;
        font-weight: bold;
        margin-bottom: 10px;
    }

    .carousel-caption p {
        color: #f8f9fa;
    }

    /* Card styling */
    .job-card, .company-card {
        transition: all 0.3s ease;
        cursor: pointer;
    }
    
    .job-card:hover, .company-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
    }
    
    .job-description {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
        text-overflow: ellipsis;
        height: 48px;
    }
    
    .section-title {
        position: relative;
        padding-bottom: 10px;
        font-weight: 600;
        color: #333;
    }
    
    .section-title::after {
        content: '';
        position: absolute;
        left: 0;
        bottom: 0;
        height: 3px;
        width: 60px;
        background-color: #0d6efd;
    }
</style>